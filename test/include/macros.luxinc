[global OK=0]
[global ANY=[0-9]+]
[global FAIL=[1-9][0-9]*]
[global fail_pattern=[Ee][Rr][Rr][Oo][Rr]]

[macro eval_ok cmd]
    [invoke eval $OK $cmd]
[endmacro]

[macro eval_any cmd]
    [invoke eval $ANY $cmd]
[endmacro]

[macro eval_fail cmd]
    [invoke eval $FAIL $cmd]
[endmacro]

[macro eval status cmd]
    !$cmd
    [invoke check_status $status]
[endmacro]

[macro check_status status]
    ?SH-PROMPT:
    !echo ==$$?==
    ?==$status==
    ?SH-PROMPT:
[endmacro]
